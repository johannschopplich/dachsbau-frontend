{
  "private": true,
  "packageManager": "pnpm@7.17.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint \"**/*.{ts,vue}\" --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "postinstall": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@sindresorhus/slugify": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@unocss/nuxt": "^0.46.5",
    "@unocss/preset-wind": "^0.46.5",
    "@vueuse/nuxt": "^9.5.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-tailwindcss": "^3.7.0",
    "eslint-plugin-vue": "^9.7.0",
    "lint-staged": "^13.0.3",
    "nuxt": "^3.0.0",
    "nuxt-kql": "^0.22.1",
    "nuxt-plausible": "^0.1.2",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.3",
    "unocss": "^0.46.5",
    "vue-tsc": "^1.0.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
