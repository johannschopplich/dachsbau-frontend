{
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "build:cloudflare": "NITRO_PRESET=cloudflare pnpm run build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "format": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.1.1",
    "@nuxtjs/plausible": "^0.2.1",
    "@sindresorhus/slugify": "^2.2.1",
    "@types/node": "^18.16.13",
    "@unocss/eslint-config": "^0.52.0",
    "@unocss/nuxt": "^0.52.0",
    "@unocss/preset-wind": "^0.52.0",
    "@vueuse/nuxt": "^10.1.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.5.1",
    "nuxt-kql": "^0.26.3",
    "nuxt-schema-org": "^2.1.3",
    "nuxt-simple-robots": "^2.3.0",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "unocss": "^0.52.0",
    "vue-tsc": "^1.6.5"
  },
  "pnpm": {
    "overrides": {
      "consola": "^3.0.1"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
