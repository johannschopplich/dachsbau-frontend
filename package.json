{
  "private": true,
  "packageManager": "pnpm@7.18.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint \"**/*.{ts,vue}\" --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@nuxtjs/plausible": "^0.2.0",
    "@sindresorhus/slugify": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "@unocss/nuxt": "^0.47.5",
    "@unocss/preset-wind": "^0.47.5",
    "@vueuse/nuxt": "^9.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "eslint-plugin-vue": "^9.8.0",
    "lint-staged": "^13.1.0",
    "nuxt": "^3.0.0",
    "nuxt-kql": "^0.23.5",
    "prettier": "^2.8.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.3",
    "unocss": "^0.47.5",
    "vue-tsc": "^1.0.11"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
