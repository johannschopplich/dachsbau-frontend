{
  "private": true,
  "packageManager": "pnpm@7.21.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "build:cloudflare": "NITRO_PRESET=cloudflare pnpm run build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.1.1",
    "@nuxtjs/plausible": "^0.2.0",
    "@sindresorhus/slugify": "^2.1.1",
    "@unocss/nuxt": "^0.48.0",
    "@unocss/preset-wind": "^0.48.0",
    "@vueuse/nuxt": "^9.10.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-tailwindcss": "^3.8.0",
    "lint-staged": "^13.1.0",
    "nuxt": "^3.0.0",
    "nuxt-kql": "^0.25.4",
    "nuxt-schema-org": "^2.0.7",
    "nuxt-simple-robots": "^0.1.6",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4",
    "unocss": "^0.48.0",
    "vue-tsc": "^1.0.20"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
