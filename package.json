{
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint \"**/*.{ts,vue}\" --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "postinstall": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.7",
    "@sindresorhus/slugify": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@unocss/nuxt": "^0.45.1",
    "@unocss/preset-typography": "^0.45.1",
    "@unocss/preset-wind": "^0.45.1",
    "@unocss/transformer-directives": "^0.45.1",
    "@vueuse/nuxt": "^9.0.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.3.0",
    "lint-staged": "^13.0.3",
    "nuxt": "^3.0.0-rc.6",
    "nuxt-kql": "^0.11.0",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.45.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue",
        "webpack",
        "vite"
      ]
    }
  }
}
