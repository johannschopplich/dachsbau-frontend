{
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "start": "node .output/server/index.mjs",
    "lint": "eslint \"**/*.{ts,vue}\" --ignore-path .gitignore",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "pnpm exec simple-git-hooks"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verifyCommit.mjs $1",
    "pre-commit": "pnpm exec lint-staged"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.5",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@unocss/nuxt": "^0.38.1",
    "@vueuse/components": "^8.6.0",
    "@vueuse/nuxt": "^8.6.0",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.1.0",
    "lint-staged": "^13.0.1",
    "nuxt": "^3.0.0-rc.3",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.3",
    "unocss": "^0.38.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue",
        "webpack",
        "vite"
      ]
    }
  }
}
