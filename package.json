{
  "private": true,
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "build:cloudflare": "NITRO_PRESET=cloudflare pnpm run build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.1.1",
    "@nuxtjs/plausible": "^0.2.0",
    "@sindresorhus/slugify": "^2.2.0",
    "@types/node": "^18.15.3",
    "@unocss/nuxt": "^0.50.6",
    "@unocss/preset-wind": "^0.50.6",
    "@vueuse/nuxt": "^9.13.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.3.1",
    "nuxt-kql": "^0.26.3",
    "nuxt-schema-org": "^2.1.2",
    "nuxt-simple-robots": "^2.0.1",
    "prettier": "^2.8.5",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.0.2",
    "unocss": "^0.50.6",
    "vue-tsc": "^1.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
