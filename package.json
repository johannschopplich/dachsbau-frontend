{
  "private": true,
  "packageManager": "pnpm@7.9.4",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint \"**/*.{ts,vue}\" --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "postinstall": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.7",
    "@nuxt/kit": "npm:@nuxt/kit-edge@latest",
    "@sindresorhus/slugify": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@unocss/nuxt": "^0.45.13",
    "@unocss/preset-wind": "^0.45.13",
    "@vueuse/nuxt": "^9.1.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.4.0",
    "lint-staged": "^13.0.3",
    "nuxt": "npm:nuxt3@latest",
    "nuxt-kql": "^0.12.2",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.45.13",
    "vue-tsc": "^0.40.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
