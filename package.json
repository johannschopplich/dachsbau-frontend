{
  "private": true,
  "packageManager": "pnpm@7.26.3",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "build:cloudflare": "NITRO_PRESET=cloudflare pnpm run build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,vue,yml}\" --write --ignore-path .gitignore",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.1.1",
    "@nuxtjs/plausible": "^0.2.0",
    "@sindresorhus/slugify": "^2.2.0",
    "@types/node": "^18.13.0",
    "@unocss/nuxt": "^0.49.4",
    "@unocss/preset-wind": "^0.49.4",
    "@vueuse/nuxt": "^9.12.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-tailwindcss": "^3.8.3",
    "lint-staged": "^13.1.1",
    "nuxt": "^3.1.2",
    "nuxt-kql": "^0.25.6",
    "nuxt-schema-org": "^2.1.1",
    "nuxt-simple-robots": "^1.0.2",
    "prettier": "^2.8.3",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5",
    "unocss": "^0.49.4",
    "vue-tsc": "^1.0.24"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "vue",
        "webpack"
      ]
    }
  }
}
